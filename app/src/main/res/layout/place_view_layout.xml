<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/placeViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/placeViewImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Logo"
            android:src="@drawable/baseline_hide_image_24" />

        <TextView
            android:id="@+id/placeNameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Address -->

    <TextView
        android:id="@+id/placeAddressField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:lineSpacingExtra="4dp"
        android:text="PJRC+RC9 Paramount, Ruko Bolsena, Blk. A16 Jl. Boulevard Raya Gading Serpong, Curug Sangereng, Kec. Klp. Dua, Kabupaten Tangerang, Banten 15810"
        android:textSize="14sp" />

